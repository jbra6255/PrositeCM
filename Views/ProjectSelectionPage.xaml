<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PrositeCM.Views.ProjectSelectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:PrositeCM.ViewModels"
    xmlns:models="using:PrositeCM.Models"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:ProjectSelectionViewModel/>
    </Page.DataContext>

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,24">
            <StackPanel>
                <TextBlock Text="Welcome, admin" 
                           Style="{StaticResource TitleTextBlockStyle}" 
                           FontSize="28"/>
                <TextBlock Text="Your Projects" 
                           Style="{StaticResource SubtitleTextBlockStyle}" 
                           Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <Button Content="Log Out" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"
                    BorderBrush="{ThemeResource SystemFillColorCriticalBrush}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
        </Grid>

        <Border Grid.Row="1" 
                CornerRadius="8" 
                BorderThickness="1" 
                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                Background="{ThemeResource LayerFillColorDefaultBrush}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" BorderThickness="0,0,0,1" Padding="12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Project" FontWeight="SemiBold" VerticalAlignment="Center" Opacity="0.7"/>
                    <TextBlock Text="Role" Grid.Column="1" FontWeight="SemiBold" VerticalAlignment="Center" Opacity="0.7"/>
                    <TextBlock Text="Description" Grid.Column="2" FontWeight="SemiBold" VerticalAlignment="Center" Opacity="0.7"/>
                </Grid>

                <ListView Grid.Row="1" ItemsSource="{Binding Projects}" SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Project">
                            <Grid Padding="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold"/>
                                <TextBlock Text="{x:Bind Role}" Grid.Column="1" Opacity="0.8"/>
                                <TextBlock Text="{x:Bind Description}" Grid.Column="2" Opacity="0.6"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="12" Margin="0,24,0,24">

            <Button Content="Open Project" Style="{StaticResource AccentButtonStyle}" Width="120"/>

            <Button Content="New Project" Width="120" Foreground="White">
                <Button.Background>
                    <SolidColorBrush Color="#107C41"/>
                </Button.Background>
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#159951"/>
                </Button.Resources>
            </Button>

            <Button Content="Share Project" Width="120"/>

        </StackPanel>

        <Grid Grid.Row="3" BorderThickness="0,1,0,0" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" Padding="0,12,0,0">
            <StackPanel Orientation="Horizontal" Spacing="5">
                <FontIcon Glyph="&#xE77B;" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <TextBlock Text="{Binding CurrentEmail}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
            </StackPanel>

            <TextBlock Text="Structure Management System v1.0" 
                       HorizontalAlignment="Right" 
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                       FontSize="12"/>
        </Grid>

    </Grid>
</Page>